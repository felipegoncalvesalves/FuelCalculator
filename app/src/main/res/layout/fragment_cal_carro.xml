<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="presentation.Cal_carroFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gris"
        android:text="Calcule sua viagem"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_consumo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:text="Consumo km/litro"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/consumo"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_consumo"
        android:layout_marginStart="230dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-6dp"
        android:hint="Km/litro"
        android:inputType="numberDecimal"
        android:maxLength="4" />

    <TextView
        android:id="@+id/txt_distancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_consumo"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Distancia"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/distancia"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/consumo"
        android:layout_alignBottom="@+id/txt_distancia"
        android:layout_marginStart="230dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="-6dp"
        android:hint="Km"
        android:inputType="numberDecimal"
        android:maxLength="4" />

    <TextView
        android:id="@+id/txt_preço"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_distancia"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Preço do litro"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/preço"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_distancia"
        android:layout_alignBottom="@+id/txt_preço"
        android:layout_marginStart="230dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-6dp"
        android:hint="R$"
        android:inputType="numberDecimal"
        android:maxLength="5" />

    <TextView
        android:id="@+id/pessoas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/preço"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="Numero de passageiros"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/num_pessoas"
        android:layout_width="79dp"
        android:layout_height="42dp"
        android:layout_below="@id/preço"
        android:layout_alignBottom="@+id/pessoas"
        android:layout_marginStart="230dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-2dp"
        android:hint="1"
        android:inputType="numberDecimal"
        android:maxLength="1" />

    <ImageView
        android:layout_width="185dp"
        android:layout_height="192dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="380dp"
        android:src="@drawable/img6" />

    <Button
        android:id="@+id/bt_calcular"
        style="@style/Butoon"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:background="@drawable/butoon"
        android:text="CALCULAR" />

</RelativeLayout>